function toggleClosed(icon, div) {
	var d = element(div);

	if (d.style.display === "none") {
		d.style.display = "block";
		icon.src = "/images/opened.svg";
	} else {
		d.style.display = "none";
		icon.src = "/images/closed.svg";
	}
}

