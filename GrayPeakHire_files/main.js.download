function toggleMore(elem, link) {
	elem = element(elem);
	if (elem.style.display === "none") {
		elem.style.display = "block";
		link.innerHTML = "View Less";
	} else {
		elem.style.display = "none";
		link.innerHTML = "View More";
	}
}

